<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_expand_item"
    android:clickable="true"
    android:id="@+id/linear_expandable"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_group_expanded"
        android:layout_width="@dimen/big_iconsize"
        android:layout_height="@dimen/big_iconsize"
        android:layout_marginStart="@dimen/extra_margin"
        android:layout_marginEnd="@dimen/extra_margin"
        android:layout_gravity="center_vertical"
        android:tint="#CCCCCC"
        app:srcCompat="@drawable/ic_expand_more_24dp" />

    <TextView
        android:id="@+id/textview_group_text"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/extra_margin"
        android:layout_marginStart="@dimen/extra_margin"
        android:paddingLeft="@dimen/normal_padding"
        android:textColor="#000000"
        android:paddingRight="@dimen/normal_padding"
        android:layout_weight="1"
        android:gravity="center_vertical" />

</LinearLayout>