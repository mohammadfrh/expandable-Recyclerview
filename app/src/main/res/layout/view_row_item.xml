<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_massage_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="70dp"
        android:padding="@dimen/normal_padding"
        android:textColor="#000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_row_transaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_docoument_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8642"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_write_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8642"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_audio_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8642"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_docoument_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="زمان بررسی اسناد و مدارک:"
                android:textColor="#656567"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_write_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="زمان مشاوره نوشتاری:"
                android:textColor="#656567"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="زمان مشاوره صوتی:"
                android:textColor="#656567"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_tracking_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8642"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_lawyers_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8642"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_cunsulting_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8642"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_tracking_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="کد پیگیری:"
                android:textColor="#656567"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_lawyers_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="نام وکیل:"
                android:textColor="#656567"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_cunsulting_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="وضعیت مشاوره:"
                android:textColor="#656567"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>